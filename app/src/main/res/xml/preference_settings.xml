<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="@string/playerSettings"
        android:title="播放器设置">
        <Preference
            android:icon="@drawable/ic_outline_play_circle_outline_24"
            android:key="@string/selectPlayer"
            android:summary="没有选择要打开的播放器"
            android:title="选择要打开的播放器" />
        <SwitchPreference
            android:icon="@drawable/ic_expand_all"
            android:key="show_all_apps"
            android:summary="如果在列表中找不到需要的APP"
            android:title="显示所有APP" />
        <SwitchPreference
            android:icon="@drawable/ic_outline_info_24"
            android:key="@string/alertOnOpen"
            android:summary="当你要插耳机看视频时可启用"
            android:title="打开播放器前询问" />
    </PreferenceCategory>
    <PreferenceCategory android:title="其它设置">
        <SwitchPreference
            android:icon="@drawable/ic_baseline_bluetooth_audio_24"
            android:key="@string/allowBluetooth"
            android:summary="当蓝牙耳机连接时也会触发已开启的操作"
            android:title="允许扫描蓝牙设备" />
        <SwitchPreference
            android:icon="@drawable/ic_repeat"
            android:key="@string/allowParallel"
            android:summary="可能导致内存泄漏"
            android:title="声道测试允许鬼畜播放" />
    </PreferenceCategory>
    <PreferenceCategory android:title="开发者选项">
        <SwitchPreference
            android:icon="@drawable/ic_test_tube_24"
            android:key="use_experimental_feature"
            android:summary="这并不稳定，遇到bug请及时反馈"
            android:title="启用预览版特性" />
        <Preference
            android:key="@string/openDetails"
            android:summary="此处为开发者选项"
            android:title="在设置中查看应用详情" />
        <Preference
            android:icon="@drawable/ic_math_log"
            android:key="@string/viewLog"
            android:summary="此处为开发者选项"
            android:title="查看日志" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="experimental_features"
        android:title="预览版特性">
        <SwitchPreference
            android:key="use_new_ui"
            android:summary="基于Jetpack Compose打造"
            android:title="使用新版用户界面" />
    </PreferenceCategory>
    <PreferenceCategory android:title="关于">
        <SwitchPreference
            android:key="@string/disableFreeAppDialog"
            android:summaryOff="如果您觉得很烦人的话请关闭"
            android:summaryOn="现在您不会在启动时看到提示"
            android:title="关闭启动时的免费软件提示" />
        <Preference
            android:key="@string/openInCoolapk"
            android:summary="查看他人对于耳机工具箱的评论"
            android:title="在酷安中查看详情" />
        <Preference
            android:key="@string/about"
            android:summary="版本号：4.0.2_milk_tea"
            android:title="关于耳机工具箱" />
        <Preference
            android:icon="@drawable/ic_cat"
            android:key="@string/about_author"
            android:summary="一只吃柠檬糖的猫猫"
            android:title="关于柠喵" />
    </PreferenceCategory>
</PreferenceScreen>